<%- include('includes/header') %>
    <style>
        header {
            position: absolute;
            top: 0 !important;
        }
    </style>
    <div class="container mt-5">
        <a class="text-center text-success">
            <h2>FEAQOV's <em>Store</em></h2>
        </a>
        <h3 class="text-center text-white">SIGN-UP</h3>
        <form method="POST">
            <input name="name" class="form-control mt-4" type="text" placeholder="Name">
            <input name="email" type="email" class="form-control mt-4" placeholder="Email">
            <input name="phone" class="form-control mt-4" placeholder="Phone" required>
            <input name="password" class="form-control mt-4" type="password" placeholder="Password">
            <textarea name="address" class="form-control mt-4"></textarea>
            <div class="row">
                <button class="btn btn-success mt-5 col" type="submit" value="LOGIN">Submit</button>                
                <a class="form-control btn-success mt-5 ml-3 col text-center" type="submit" href="/login">LOG-IN</a>
            </div>
        </form>
    </div>
    <%- include('includes/footer') %>