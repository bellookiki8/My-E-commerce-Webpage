<%- include('includes/header') %>
    <!-- Page Content -->
    <!-- Banner Starts Here -->
    <div class="banner header-text">
        <div class="owl-banner owl-carousel">
            <% for (const category of categories) { %>
                <div class="banner-item-01" style="background-image: url('<%- category.image %>');">
                    <div class="text-content">
                        <h4>
                            <%- category %>
                        </h4>
                        <h2>
                            <%- category.description %>
                        </h2>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
    <!-- Banner Ends Here -->

    <div class="latest-products">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-heading">
                        <h2>Latest Products</h2>
                        <a href="/products">view all products <i class="fa fa-angle-right"></i></a>
                    </div>
                </div>
                <% for (const product of latestProducts) { %>
                    <div class="col-md-4">
                        <div class="product-item">
                            <a href="/product/<%- product._id %>"><img src="<%- product.image %>" alt=""></a>
                            <div class="down-content">
                                <a href="/product/<%- product._id %>">
                                    <h4>
                                        <%- product.name %>
                                    </h4>
                                </a>
                                <h6> $<%- product.unitPrice %>
                                </h6>
                                <p>
                                    <%- product.description %>
                                </p>
                                <ul class="stars">
                                    <% for (let index=0; index < 5; index++) { %>
                                        <li><i class="fa fa-star" <%- index >= product.rating ? "style='color:#212529'" : ''  %> ></i></li>
                                    <% } %>
                                </ul>
                                <span>
                                    <%- product.reviewCount || 0 %> Review
                                </span>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>

