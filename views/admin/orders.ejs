<%- include('includes/header') %> <%- include('includes/sidebar') %>
<link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.css">
<div class="content-wrapper">
  <div class="m-2">
    <div class="row">
      <div class="col-12">
        <table class="table table-striped table-sm table-bordered">
          <thead>
            <tr>
              <th>Photo</th>
              <th>Client</th>
              <th>Product</th>
              <th>Quantity</th>
              <th>Unit price</th>
              <th>Total price</th>
              <th>Status</th>
              <th>Menu</th>
            </tr>
          </thead>
          <tbody>
            <% for( let order of orders) {%>
              <tr>
                <td><img src="<%= order.product.image %>" alt=""></td>
                <td><%= order.client %></td>
                <td><%- order.product %></td>
                <td><%- order.quantity %></td>
                <td><%- order.unitPrice %></td>
                <td><%- order.totalPrice %></td>
                <td><%- order.status %></td>
                <td>
                  <a href="/admin/order/refund/<%- order.id %>"   class="btn <%- order.status == 'Completed' ? 'disabled' : '' %> btn-danger btn-sm">Refund</a>
                  <a href="/admin/order/ship/<%- order.id %>"  class="btn <%- order.status != 'Pending' ? 'disabled' : '' %>  btn-success btn-sm">Ship</a>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('includes/footer') %>
