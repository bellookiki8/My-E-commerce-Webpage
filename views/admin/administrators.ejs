    <script src="/js/axios.min.js"></script>
    <script>
      async function bindAdministratorValue(administrator_id) {
        let result = await axios.get(`/admin/administrator/api/${administrator_id}`)
        console.log(result)
        if (result.error) {
          alert("Cannot find administrator")
          return
        }
        let administrator = result.data
        document.querySelector('#edit-name').value = administrator.name;
        document.querySelector('#edit-phone').value = administrator.phone;
        document.querySelector('#edit-email').value = administrator.email;
        document.querySelector('#edit-address').value = administrator.address;
        document.querySelector('#id').value = administrator._id;
      }
    </script>
