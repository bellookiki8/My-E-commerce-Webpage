<%- include('includes/header') %>
  <%- include('includes/sidebar') %>
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.css">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-md-12 grid-margin">
          <div class="d-flex justify-content-between flex-wrap">
            <div class="d-flex align-items-end flex-wrap">
              <div class="mr-md-3 mr-xl-5">
                <h2>Welcome back,</h2>
                <p class="mb-md-0">Product administrators.</p>
              </div>
              <div class="d-flex">
                <i class="mdi mdi-home text-muted hover-cursor"></i>
                <p class="text-muted mb-0 hover-cursor">&nbsp;/&nbsp;Dashboard&nbsp;/&nbsp;</p>
                <p class="text-primary mb-0 hover-cursor">Administrators</p>
              </div>
            </div>
            <div class="d-flex justify-content-between align-items-end flex-wrap">
              <button type="button" class="btn btn-light bg-white btn-icon mr-3 d-none d-md-block ">
                <i class="mdi mdi-download text-muted"></i>
              </button>

              <button type="button" class="btn btn-light bg-white btn-icon mr-3 mt-2 mt-xl-0"
                title="Add a Administrator" data-toggle="modal" data-target="#addAdministratorModal">
                <i class="mdi mdi-plus text-muted"></i>
              </button>
              <button class="btn btn-primary mt-2 mt-xl-0">Download report</button>
            </div>
          </div>
        </div>
      </div>

      <div class="m-2">
        <div class="row">
          <div class="col-12">
            <table class="table table-striped table-sm table-bordered">
              <thead>
                <tr>
                  <th>Photo</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Address</th>
                  <th>Reg Date</th>
                  <th>Menu</th>
                </tr>
              </thead>
              <tbody>
                <% for( let administrator of administrators) {%>
                  <tr>
                    <td><img src="<%= administrator.photo %>" alt=""></td>
                    <td>
                      <%= administrator.name %>
                    </td>
                    <td>
                      <%- administrator.email %>
                    </td>
                    <td>
                      <%- administrator.phone %>
                    </td>
                    <td>
                      <%- administrator.address %>
                    </td>
                    <td>
                      <%- administrator.registrationDate %>
                    </td>
                    <td>
                      <!-- <button onclick="bindAdministratorValue('<%- administrator._id %>')"
                        class="btn btn-success btn-sm" data-toggle="modal" data-target="#editAdministratorModal"><i
                          class="mdi mdi-border-color"></i></button> -->
                      <!-- <a href="/admin/administrator/<%- administrator.id %>/delete" class="btn btn-danger btn-sm"><i
                          class="mdi mdi-delete"></i></a> -->
                    </td>
                  </tr>
                  <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>

    <!-- The Modal -->
    <div class="modal" id="addAdministratorModal">
      <div class="modal-dialog">
        <div class="modal-content">
          <form action="" method="post" enctype="multipart/form-data">
            <!-- Modal Header -->
            <div class="modal-header">
              <h4 class="modal-title">Fill the form to add a administrator</h4>
              <button type="button" class="close" data-dismiss="modal">
                &times;
              </button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
              <div class="row">
                <div class="col-12 form-group">
                  <label for="name">Name</label>
                  <input class="form-control" name="name" id="name">
                  <input type="hidden" name="name" id="id">
                </div>
                <div class="col-12 form-group">
                  <label for="name">Phone</label>
                  <input class="form-control" name="phone" id="phone">
                </div>
                <div class="col-12 form-group">
                  <label for="name">Email</label>
                  <input class="form-control" name="email" id="email" type="email">
                </div>
                <div class="col-12 form-group">
                  <label for="description">Address</label>
                  <textarea class="form-control" name="address" id="address"></textarea>
                </div>
                <div class="col-12 form-group">
                  <label for="name">Photo</label>
                  <input class="form-control" name="photo" id="photo" type="file">
                </div>
                <div class="col-12 form-group">
                  <label for="name">Password</label>
                  <input class="form-control" name="password" id="password" type="password">
                </div>
              </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Submit</button>
              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
          </form>
        </div>
      </div>
    </div>

